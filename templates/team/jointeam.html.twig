{% extends 'base.html.twig' %}
{% form_theme form _self %}

{% block body %}
    
{% if app.user.teamrole != "none" %}
    <h1>Can't join a team if you already are in one.</h1>
{% else %}
    <div class="registerbox">
        <h2>Join Team</h2>
        {{ form_start(form)}}
        {{form_widget(form) }}
           {{form_end(form) }}           
       {{form_errors(form)}}        
    </div>
{% endif %}
{% endblock %}

{% block form_errors %}
{% if errors|length >0 %}
    <ul>
        {% for error in errors %}
        <li class="error-message">{{error.message}}</li>
 {% endfor %}
        </ul>
{%endif%}    
{% endblock form_errors %}