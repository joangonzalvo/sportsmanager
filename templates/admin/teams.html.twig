{% extends 'base.html.twig' %}

{% block body %}
    {% if app.user %}
        {% if app.user.role == "ROLE_ADMIN" %}
         <div class="admintable">  
            <div class="admindata">
                  <div class="admintitle"><h2>Admin panel</h2></div>
                <div class="admininfo"><a href="/adminpanel/users">Show users</a></div>
                <div class="admininfo"><a href="/adminpanel/teams">Show teams</a></div>
                <div class="admininfo"><a href="/adminpanel/leagues">Show leagues</a></div>
              </div>
          <table>
            <thead>
              <tr>
                <th>Team Name</th>
                <th>Logo</th>
                <th>Teamkey</th>
                <th>League titles</th>
                <th>Other titles</th>
                <th>Teamvalue</th>
                <th>Action edit</th>
                <th>Action delete</th>
              </tr>
            </thead>
            <tbody>
            {% for team in teams %}

                {%set flag = 0 %}
                <tr>
                <td>{{team.teamname}}</td>
                <td><img class="teamlogo" src="{{ asset('uploads/pictures/' ~ team.logo) }}" alt="Team logo"></td>
                <td>{{team.teamkey}}</td>
                <td>{{team.leaguetitles}}</td>
                <td>{{team.othertitles}}</td>
                <td>{{team.teamvalue}}</td>
                <td><a href="/adminpanel/{{team.id}}/editteam">Edit</a></td>
                <td><a href="/adminpanel/{{team.id}}/deleteteam">Delete</a></td>
              </tr>
            {%endfor%}
            </tbody>
          </table>
         </div>
    {% endif %}
    
    {% endif %}
{% endblock %}
